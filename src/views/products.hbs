    <h1 style="margin-bottom: 50px;">Productos</h1>
    <h3>Bienvenido {{user.firstName}} {{user.lastName}} al E-Commerce</h3>
    {{#if products.length}}
        <div class="productsList">
            {{#each products}}
                <div class="productCard">
                    <h2>{{this.title}}</h2>
                    <p>{{this.description}}</p>
                    <p>Precio: ${{this.price}}</p>
                    <p>Categoría: {{this.category}}</p>
                    <p>Stock: {{this.stock}}</p>
                    <p>Código: {{this.code}}</p>
                    <div class="productButtons">
                        <button onclick="location.href='/products/{{this._id}}'">Ver Detalles</button>
                        <button onclick="addToCart('{{this._id}}')">Agregar al Carrito</button>
                    </div>
                </div>
            {{/each}}
        </div>

        <div class="cartLink">
            <a href="http://localhost:8080/login" class="login">Iniciar Sesión</a>
            <a  href="http://localhost:8080/carts/66365f682bbd296adfa43a01">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="black" class="bi bi-cart4" viewBox="0 0 16 16">
                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"/>
                </svg>
            </a>
            <a href="http://localhost:8080/profile">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="black" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                </svg>
            </a>
        </div>

        <div class="pagination">
            {{#if hasPrevPage}}
                <a href="{{prevLink}}">Anterior</a>
            {{/if}}

            <p>{{page}}</p>

            {{#if hasNextPage}}
                <a href="{{nextLink}}">Siguiente</a>
            {{/if}}
        </div>
    {{else}}
        <p>No hay productos disponibles.</p>
    {{/if}}

    <style>
        .pagination {
            font-family: sans-serif;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 20px;
            width: 150px;
            margin: auto;
        }

        .productsList {
            display: flex;
            flex-wrap: wrap
        }

        .productCard {
            background-color: rgba(47, 239, 34, 0.638);
            margin: auto;
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 250px;
            border: 2px solid grey;
            border-radius: 10px;
        }

        .productCard h2 {
            width: 100%;
            text-align: center;
            margin-left: 0;
        }

        .productButtons {
            display: flex;
            width: 100%;
            justify-content: space-around;
            margin: 5px;
        }

        .productButtons button {
            border-radius: 5px;
            border-width: 0.2px;
        }

        .productButtons button:hover {
            background-color: rgba(145, 145, 145, 0.63);
        }

        .cartLink {
            position: absolute;
            right: 40px;
            top: 20px;
        }

        .cartLink a{
            text-decoration: none;
        }

        .cartLink .login:hover {
            text-decoration: underline;
        }

        .cartLink svg:hover {
            scale: 1.1;
        }

        .bi-person-fill {
            position: relative;
            top: 5px;
        }
    </style>

    <script src="/js/products.js"></script>