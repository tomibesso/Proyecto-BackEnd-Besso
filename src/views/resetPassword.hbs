<main>
    <h2>Restablecer Contrase単a</h2>
    <form id="resetPasswordForm" onsubmit="resetPassword(event)">
        <label>Nueva Contrase単a</label>
        <input type="password" id="newPassword" required>
        <button type="submit">Restablecer Contrase単a</button>
    </form>
</main>

<script>
    async function resetPassword(event) {
        event.preventDefault();
        
        const newPassword = document.getElementById('newPassword').value;

        const response = await fetch('/api/sessions/resetPassword', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ newPassword }),
        });

        const result = await response.json();
        if (response.ok) {
            alert('Contrase単a restablecida exitosamente');
            window.location.href = '/login';
        } else {
            alert(`Error: ${result.error}`);
            window.location.href = '/restorePassword';
        }
    }
</script>
