<h1>Gestionador de productos</h1>

<div>
    <h2>Agregar producto:</h2>
    <input type="text" name="title" id="title" placeholder="Título" required>
    <input type="text" name="description" id="description" placeholder="Descripción" required>
    <input type="number" name="price" id="price" placeholder="Precio" required>
    <input type="text" name="thumbnails" id="thumbnails" placeholder="URL de la imagen" required>
    <input type="text" name="code" id="code" placeholder="Código" required>
    <input type="number" name="stock" id="stock" placeholder="Stock" required>
    <input type="text" name="category" id="category" placeholder="Categoría" required>
    <button onclick="createProduct(event)">Crear</button>
</div>

<div>
    <h2>Actualizar/Modificar producto:</h2>
    <input type="text" name="productId" id="productId" placeholder="ID de producto">

    <form>
        <input type="text" name="updateTitle" id="updateTitle" placeholder="Título">
        <input type="text" name="updateDescription" id="updateDescription" placeholder="Descripción">
        <input type="number" name="updatePrice" id="updatePrice" placeholder="Precio">
        <input type="text" name="updateThumbnails" id="updateThumbnails" placeholder="URL de la imagen">
        <input type="text" name="updateCode" id="updateCode" placeholder="Código">
        <input type="number" name="updateStock" id="updateStock" placeholder="Stock">
        <input type="text" name="updateCategory" id="updateCategory" placeholder="Categoría">
        <button onclick="updateProduct(event)">Actualizar</button>
    </form>
</div>  

<div>
    <h2>Eliminar producto</h2>
    <input type="text" name="product_Id" id="product_Id" placeholder="ID del producto">
    <button onclick="deleteProduct(event)">Eliminar</button>
</div>

<style>
    h2 {
        text-align: start;
    }
</style>

<script src="/js/products.js"></script>
